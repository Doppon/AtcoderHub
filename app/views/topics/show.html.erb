<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h3>新規書き込み</h3>

      <%= form_for @newpost, :url => post_create_path do |f| %>
        <p>お名前</p>
        <p><%= f.text_field :name %></p>
        <p>本文</p>
        <p><%= f.text_area :body %></p>
        <%= f.hidden_field :topic_id %>
        <%= f.submit %>
      <% end %>
    </div>

    <div class="col-sm-8 background-chat">
      <h2 class="text-center"><%= @topic.title %></h2>
      <% @posts.each do |post| %>
        <p>
          <div style="display: inline-block;"><%= post.name %> : </div>
          <div class="chat-hukidashi someone"><%= post.body %></div>
          <%= link_to '削除', post_delete_path(post.id), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>     
        </p>
      <% end %>
    </div>
  </div>

  <div class="text-center">
    <%= link_to 'HOME', home_index_url %>
  </div>
</div>
